<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TrackTrip"
    tools:showIn="@layout/activity_track_trip">

    <TextView
        android:id="@+id/displaytext"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:text="this is some text">

    </TextView>

    <TextView
        android:id="@+id/Start"
        android:layout_width="250dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:textAlignment="center"
        android:text="Enter Starting Point"
        app:layout_constraintBottom_toTopOf="@+id/starttextbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/displaytext">

    </TextView>

    <TextView
        android:id="@+id/dest"
        android:layout_width="250dp"
        android:layout_height="27dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:text="Enter Destination Point"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/endtextbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bus">

    </TextView>

    <EditText
        android:id="@+id/starttextbox"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/displaytext" />

    <ImageButton
        android:id="@+id/train"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher_round"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="SelectTrain"
        android:text="T"
        app:layout_constraintBottom_toTopOf="@+id/endtextbox"
        app:layout_constraintEnd_toStartOf="@+id/bus"
        app:layout_constraintHorizontal_bias="0.257"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/starttextbox"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/bus"
        android:src="@mipmap/ic_launcher_round"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="SelectBus"
        android:text="B"
        app:layout_constraintBottom_toTopOf="@+id/endtextbox"
        app:layout_constraintEnd_toStartOf="@+id/ecar"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/starttextbox"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:src="@mipmap/ic_launcher_round"
        android:id="@+id/ecar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="8dp"
        android:onClick="SelectCar"
        android:text="Car"
        app:layout_constraintBottom_toTopOf="@+id/endtextbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/starttextbox"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/endtextbox"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="200dp"
        app:layout_goneMarginTop="@dimen/app_bar_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</android.support.constraint.ConstraintLayout>